                    </div>
                    <!-- --- -->
                    <form asp-controller="Search" asp-action="SearchIndex" class="search_form">
                        <input type="hidden" value="1" name="page"/>
                        <input type="text" name="searchString" class="input" placeholder="Search here...">
                        <button class="search-btn">
                            <i class="fa fa-search"></i>
                        </button>
                        
                    </form>
                    <!-- --- -->
                    <button asp-area="Customer" asp-controller="Home" asp-action="Cart" type="submit" class="btn btn-primary">
