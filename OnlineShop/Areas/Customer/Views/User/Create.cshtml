@using Microsoft.AspNetCore.Identity
@model IdentityUser
@{
    ViewData["Title"] = "Create";
}

<br />

<br />
<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <section>
            <form asp-action="Create" method="post" id="user-form"  enctype="multipart/form-data">
                <h2 class="text-center">Add New User</h2>
                <br />
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="floatingMail" placeholder="name@example.com" asp-for="UserName" />
                    <label for="floatingMail" asp-for="UserName">Email address</label>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="floatingPassword" placeholder="Password" asp-for="PasswordHash" />
                    <label for="floatingPassword" asp-for="PasswordHash">Password</label>
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>
                @*<div class="form-floating mb-3">
                    <input type="text" placeholder="Name" id="floatingName" placeholder="Name" asp-for="FirstName" class="form-control" />
                    <label for="floatingName" asp-for="FirstName" class="form-label">Name</label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" placeholder="Surname" id="floatingSurname" placeholder="Surname" asp-for="LastName" class="form-control" />
                    <label for="floatingSurname" asp-for="LastName" class="form-label">Surname</label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>*@
                <div>
                    <button value="Save" type="submit" class="w-100 btn btn-lg btn-primary">Sign Up</button>
                </div>
                <br />
                <div>
                    <p>
                        <a asp-area="Identity" asp-page="/Account/Login">Sign in if you already have account</a>
                    </p>
                </div>
            </form>
            @*<div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
            <a asp-page=".../Views/Shared/_LoginPartial">Register as a new user</a>*@
        </section>
    </div>
    <div class="col-md-4">
        <h2></h2>
        <br />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h3>@ViewBag.message</h3>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
   
<script>
    $(document).ready(function () {
        $("#user-form").validate({
    rules: {
      UserName : {
        required: true,
             },
      PasswordHash : {
        required: true,
             }
            },
            messages: {
                UserName: "Enter your email",
PasswordHash:"Enter your password"
            }
           
  });
    });
</script>
}

